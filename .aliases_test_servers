#!/usr/bin/env bash

# system
alias vi="vim"

cheat() {
    curl cheat.sh/$1
}

vfzf() {
    if [[ -n "$1" ]]; then
        local file="$(fzf -q $1)"
    else
        local file="$(fzf)"
    fi
    if [[ -n "$file" ]]; then
        vim "$file"
    fi
}

# colours
alias ls="ls --color=auto"
alias grep="grep --colour=auto"
