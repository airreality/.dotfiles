# dirs
alias b="cd ~/BashProjects/"
alias d="cd ~/work/dci/"
alias e="cd ~/work/entrypoint/"
alias p="cd ~/PythonProjects/"

# scripts
alias hi="python ~/PythonProjects/QATS/qats.py hello"
alias wtime="python ~/PythonProjects/WORKTIME/time.py"
alias lenses="python ~/PythonProjects/Lenses/lenses.py"

# isp
alias go="ssh -t sup@ssh.ispsystem.net go"

# system
alias diff="colordiff"
alias opti="optirun -c :8"
alias space="xfconf-query -c xfwm4 -p /general/workspace_count -s"
alias venv='source venv/bin/activate > /dev/null 2>&1 || source env/bin/activate > /dev/null 2>&1 || (echo No env. Create?; read create; if [[ "$create" == "y" || "$create" == "Y" ]]; then python3 -m virtualenv venv; fi)'
alias weather="curl wttr.in"
alias vim="nvim"

# ls grep
alias ll="ls -lah"
alias ls="ls --color=auto"
alias grep="grep --colour=auto"
alias egrep="egrep --colour=auto"
alias fgrep="fgrep --colour=auto"

# docker
alias dps="docker ps --format='{{.ID}} : {{.Names}}'"
alias dls="docker image ls --format='{{.ID}} : {{.Repository}}'"
alias drm="sh ~/BashProjects/aliases/docker_remove.sh"
alias dirm="sh ~/BashProjects/aliases/docker_images_remove.sh"
alias dbash="sh ~/BashProjects/aliases/docker_bash.sh"
alias dup="b; sh run_dci.sh"
alias ddown="e; docker-compose -f docker-compose.yaml down"
